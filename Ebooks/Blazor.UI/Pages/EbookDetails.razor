@page "/ebooks/{Id:int}"

<h3>@Ebook?.Name</h3>

@if (Loading)
{
    <div class="text-center">
        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Trwa ładowanie danych...</span>
        </div>
    </div>
}
else
{
    <Blazor.UI.Shared.PageableView Data="Ebook.Pages">
        <Template Context="pageContext">
            @pageContext?.Content
        </Template>
    </Blazor.UI.Shared.PageableView>
}